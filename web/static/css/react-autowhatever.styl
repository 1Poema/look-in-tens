fontSize = 16px
borderColor = #aaa
borderRadius = 4px

.react-autowhatever
  &__container
    position relative
  &__items-container
    position relative
    top -1px
    width 280px
    margin 0
    padding 0
    list-style-type none
    border 1px solid borderColor
    background-color #fff
    font-size fontSize
    border-bottom-left-radius borderRadius
    border-bottom-right-radius borderRadius
    z-index 2

input
  width 240px
  height 30px
  padding 10px 20px
  font-size fontSize
  border 1px solid borderColor
  border-radius borderRadius
  &:focus
    outline none
  .container--open &
    border-bottom-left-radius: 0
    border-bottom-right-radius: 0


.react-autowhatever__item
  cursor pointer
  padding 10px 20px
  &:hover,
  &--focused
    background-color #ddd

.section-title
  padding 10px 0 0 10px
  font-size 12px
  color #777
  border-top 1px dashed #ccc
  .section-container:first-child &
    border-top 0

.section-items-container
  margin 0
  padding 0
  list-style-type none
