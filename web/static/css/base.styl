@import "colors"

body, form, ul, table
  background white
  color regularText
  margin-top 20px
  margin-bottom 20px

a
  color regularText
  &:hover
    color regularText

.alert:empty
  display none

form
  &.link,
  &.button
    display inline

.container-narrow > hr
  margin 30px 0

.jumbotron
  display inline-block
  margin-top 30px
  text-align center
  border-bottom 0

.container
  max-width 730px

.header
  margin-bottom 30px

input
  -webkit-appearance: none
