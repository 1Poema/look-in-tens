@import "colors"

body, form, ul, table
  background white
  color regularText
  margin-top 20px
  margin-bottom 20px

.alert:empty
  display none

form.link, form.button
  display inline

.logo
  background-size 519px 71px
  display inline-block
  height 41px
  margin-bottom 1em
  width 100%
  font-size 20px
  font-weight bold

.header,
.marketing
  padding-right 15px
  padding-left 15px

.container-narrow > hr
  margin 30px 0

.jumbotron
  text-align center
  border-bottom 1px solid #e5e5e5

.marketing
  margin 35px 0

@media screen and (min-width 768px)
  .container
    max-width 730px

  .header,
  .marketing
    padding-right 0
    padding-left 0

  .header
    margin-bottom 30px

  .jumbotron
    border-bottom 0
