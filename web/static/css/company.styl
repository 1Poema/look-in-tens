@import 'colors'

.companies
  clear both
  float none

.company
  margin-top 20px
  > div
    float left
    width 70%
    h1
      font-weight normal
      font-size 24px
      margin-top 24px
    h4
      font-weight bold

  h2
    float right
    font-size 60px
    line-height 1em
    margin-bottom 0
    margin-top 0
    text-align right
    width 28%
    &.green
      green()
    &.red
      red()
  span
    float right
    font-size 12px
    margin-right 4px
    margin-bottom 0px

  .disclaimer
    background #c00
    color white
    float left
    text-align center
    width 100%
    margin 20px 0
    padding 6px 0
