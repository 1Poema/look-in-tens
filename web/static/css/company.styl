@import 'colors'

.company
  margin-top 20px
  > div
    float left
    width 70%
    h1
      font-weight normal
      font-size 24px
      margin-top 24px
    h4
      font-weight bold

  h2
    float right
    font-size 48px
    margin-bottom 0
    text-align right
    width 28%
    &.green
      green()
    &.red
      red()
  span
    float right
    font-size 12px
    margin-right 4px
